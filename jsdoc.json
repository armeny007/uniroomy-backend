{
  "source": {
    "include": [
      "./api"
    ],
    "excludePattern": "(node_modules/|docs|app-bundle.js)"
  },
  "plugins": [
    "plugins/markdown",
    "jsdoc-mermaid"
  ],
  "opts": {
    "encoding": "utf8",
    "destination": "docs/",
    "readme": "./docs-src/home.md",
    "recurse": true,
    "verbose": true,
    "tutorials": "./docs-src/tutorials",
    "template": "./node_modules/better-docs/"
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "default": {
        "staticFiles": {
          "include": [
              "./docs-src/img"
          ]
        }
    },
    "better-docs": {
        "name": "UniRoomy Backend API Documentation",
        "logo": "",
        "navigation": [
            {
                "label": "GitHub",
                "href": "https://github.com/armeny007/uniroomy-backend"
            },
            {
                "label": "Live GraphQL demo",
                "href": "https://uniroomy-backend.herokuapp.com/graphiql"
            }
        ]
    }
}
}